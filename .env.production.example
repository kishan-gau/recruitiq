# =============================================================================
# RecruitIQ Frontend - Production Environment Configuration
# =============================================================================
# Copy this file to .env.production and fill in your production values
# NEVER commit actual .env.production file to version control
# =============================================================================

# API Configuration
VITE_API_URL=https://api.yourdomain.com/api
VITE_APP_URL=https://yourdomain.com

# Application
VITE_APP_NAME=RecruitIQ
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Modern Recruitment Management System

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_TRACKING=true
VITE_ENABLE_WEBSOCKETS=true
VITE_ENABLE_FILE_UPLOADS=true

# Stripe (Public Key)
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_your_publishable_key

# Google Analytics
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Sentry (Error Tracking)
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
VITE_SENTRY_ENVIRONMENT=production
VITE_SENTRY_TRACES_SAMPLE_RATE=0.1
VITE_SENTRY_REPLAYS_SESSION_SAMPLE_RATE=0.1
VITE_SENTRY_REPLAYS_ON_ERROR_SAMPLE_RATE=1.0

# Build Configuration
VITE_BUILD_TARGET=es2020
VITE_MINIFY=true
VITE_SOURCEMAP=false

# CDN (Optional)
VITE_CDN_URL=https://cdn.yourdomain.com

# Support
VITE_SUPPORT_EMAIL=support@yourdomain.com
VITE_SUPPORT_URL=https://support.yourdomain.com
