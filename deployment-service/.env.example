# TransIP Configuration
TRANSIP_ACCOUNT_NAME=your-account-name
TRANSIP_PRIVATE_KEY_PATH=/path/to/your/private.key
TRANSIP_API_URL=https://api.transip.nl/v6
TRANSIP_TOKEN_EXPIRY=1800
TRANSIP_READ_ONLY=false

# Deployment Configuration
DEPLOYMENT_DRY_RUN=true
DEPLOYMENT_BILLING_GUARD=true
MAX_CONCURRENT_DEPLOYMENTS=3
TRANSIP_DEFAULT_PRODUCT=vps-bladevps-x4
TRANSIP_DEFAULT_REGION=ams0

# OpenStack Configuration
OPENSTACK_DEFAULT_PROJECT=recruitiq
OPENSTACK_DEFAULT_FLAVOR=m1.medium
OPENSTACK_DEFAULT_IMAGE=ubuntu-22.04

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Server Configuration
DEPLOYMENT_SERVICE_PORT=5001
NODE_ENV=development

# License Manager Integration
LICENSE_MANAGER_URL=http://localhost:5000
LICENSE_MANAGER_API_KEY=your-api-key-here

# Security
JWT_SECRET=your-jwt-secret-change-in-production
REQUIRE_AUTH=true
