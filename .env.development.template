# Development Environment Configuration
# Copy this file to .env.development for local Docker development

# Node Environment
NODE_ENV=development

# API Configuration
PORT=3001
API_URL=http://localhost:3001

# Database Configuration
DATABASE_URL=postgresql://recruitiq_user:recruitiq_password@postgres-dev:5432/recruitiq_dev
DATABASE_HOST=postgres-dev
DATABASE_PORT=5432
DATABASE_NAME=recruitiq_dev
DATABASE_USER=recruitiq_user
DATABASE_PASSWORD=recruitiq_password

# Redis Configuration
REDIS_URL=redis://redis-dev:6379
REDIS_HOST=redis-dev
REDIS_PORT=6379
REDIS_PASSWORD=redis_dev_password

# JWT Configuration (Development - use secure secrets in production)
JWT_SECRET=your-development-jwt-secret-here-make-it-long-and-random
JWT_REFRESH_SECRET=your-development-refresh-secret-here-make-it-long-and-random
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,http://localhost:5174,http://localhost:5175,http://localhost:5176

# Logging
LOG_LEVEL=debug
LOG_FORMAT=dev

# File Upload
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Email Configuration (Development)
EMAIL_FROM=noreply@localhost
EMAIL_PROVIDER=console
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_SECURE=false

# Session Configuration
SESSION_SECRET=your-development-session-secret-here

# Rate Limiting (Relaxed for development)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Security Headers (Development)
SECURITY_HEADERS_ENABLED=false

# Features
ENABLE_SWAGGER=true
ENABLE_METRICS=true
ENABLE_DEBUG_ROUTES=true