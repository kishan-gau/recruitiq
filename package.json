{
  "name": "recruitiq-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "RecruitIQ Multi-Product SaaS Platform - Monorepo",
  "workspaces": [
    "apps/web",
    "apps/portal",
    "backend",
    "deployment-service",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm run --parallel --filter=./apps/web --filter=./backend dev",
    "dev:backend": "cd backend && npm run dev",
    "dev:web": "pnpm run --filter=web dev",
    "build": "pnpm run --parallel --filter=./apps/web --filter=./backend build",
    "build:web": "pnpm run --filter=web build",
    "build:backend": "cd backend && npm install --production",
    "test": "pnpm run --parallel --filter=./apps/web --filter=./backend test",
    "lint": "pnpm run --parallel --filter=./apps/web --filter=./backend lint",
    "clean": "pnpm run --parallel --filter=./apps/* clean && rm -rf node_modules",
    "docker:build": "docker-compose -f docker-compose.production.yml build",
    "docker:build:backend": "docker build -f Dockerfile.backend -t recruitiq-backend .",
    "docker:build:frontend": "docker build -f Dockerfile.frontend --build-arg APP_NAME=web -t recruitiq-web .",
    "docker:build:deployment": "docker build -f Dockerfile.deployment-service -t recruitiq-deployment-service .",
    "docker:up": "docker-compose -f docker-compose.production.yml up -d",
    "docker:down": "docker-compose -f docker-compose.production.yml down",
    "docker:logs": "docker-compose -f docker-compose.production.yml logs -f",
    "docker:dev": "docker-compose up -d",
    "docker:dev:build": "docker-compose build",
    "docker:dev:up": "docker-compose up",
    "docker:dev:down": "docker-compose down",
    "docker:dev:logs": "docker-compose logs -f",
    "docker:dev:clean": "docker-compose down -v --remove-orphans && docker system prune -f",
    "deploy:check": "bash scripts/health-check.sh localhost",
    "deploy:prod": "bash scripts/deploy.sh production all",
    "deploy:staging": "bash scripts/deploy.sh staging all",
    "docs:capture:web": "pnpm --filter=apps/web exec playwright test user-manual/playwright/capture.manual.spec.ts --project=chromium",
    "docs:generate": "node user-manual/scripts/generate-manual.js",
    "docs:regen": "pnpm run docs:capture:web && pnpm run docs:generate"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "tailwindcss": "^4.1.18",
    "vite": "^7.3.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "pnpm": {
    "overrides": {
      "glob@>=10.2.0 <10.5.0": ">=10.5.0",
      "js-yaml@>=4.0.0 <4.1.1": ">=4.1.1"
    }
  }
}
