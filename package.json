{
  "name": "recruitiq-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "RecruitIQ Multi-Product SaaS Platform - Monorepo",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm run --parallel --filter=./apps/* dev",
    "dev:all": "concurrently \"npm:dev:gateway\" \"npm:dev:backend\" \"npm:dev:paylinq\"",
    "dev:gateway": "cd dev-gateway && npm start",
    "dev:backend": "cd backend && npm run dev",
    "dev:recruitiq": "pnpm run --filter=recruitiq dev",
    "dev:paylinq": "pnpm run --filter=paylinq dev",
    "dev:nexus": "pnpm run --filter=nexus dev",
    "dev:portal": "pnpm run --filter=portal dev",
    "build": "pnpm run --parallel --filter=./apps/* build",
    "build:recruitiq": "pnpm run --filter=recruitiq build",
    "build:paylinq": "pnpm run --filter=paylinq build",
    "build:nexus": "pnpm run --filter=nexus build",
    "build:portal": "pnpm run --filter=portal build",
    "build:backend": "cd backend && npm install --production",
    "test": "pnpm run --parallel --filter=./apps/* test",
    "test:ui": "pnpm run --filter=@recruitiq/ui test",
    "lint": "pnpm run --parallel --filter=./apps/* lint",
    "clean": "pnpm run --parallel --filter=./apps/* clean && rm -rf node_modules",
    "docker:build": "docker-compose -f docker-compose.production.yml build",
    "docker:build:backend": "docker build -f Dockerfile.backend -t recruitiq-backend .",
    "docker:build:frontend": "docker build -f Dockerfile.frontend --build-arg APP_NAME=nexus -t recruitiq-nexus .",
    "docker:up": "docker-compose -f docker-compose.production.yml up -d",
    "docker:down": "docker-compose -f docker-compose.production.yml down",
    "docker:logs": "docker-compose -f docker-compose.production.yml logs -f",
    "deploy:check": "bash scripts/health-check.sh localhost",
    "deploy:prod": "bash scripts/deploy.sh production all",
    "deploy:staging": "bash scripts/deploy.sh staging all"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.0.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "postcss": "^8.5.6",
    "prettier": "^3.1.0",
    "tailwindcss": "^3.4.18",
    "vite": "^7.2.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "pnpm": {
    "overrides": {
      "glob@>=10.2.0 <10.5.0": ">=10.5.0",
      "js-yaml@>=4.0.0 <4.1.1": ">=4.1.1"
    }
  }
}
