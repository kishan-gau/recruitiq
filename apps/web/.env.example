# RecruitIQ Web - Unified Frontend Environment Configuration
# Copy this file to .env and update with your settings

# API Configuration
VITE_API_URL=/api

# Application Info
VITE_APP_NAME=RecruitIQ
VITE_APP_VERSION=1.0.0

# Feature Flags
VITE_USE_API=true
VITE_ENABLE_DEBUG=false
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_TRACKING=false
VITE_ENABLE_WEBSOCKETS=true
VITE_ENABLE_FILE_UPLOADS=true

# Module Toggles (enable/disable specific product modules)
VITE_ENABLE_RECRUITMENT=true
VITE_ENABLE_HRIS=true
VITE_ENABLE_PAYROLL=true
VITE_ENABLE_SCHEDULING=true

# Security Settings (Production)
# VITE_API_URL=https://api.recruitiq.com
# VITE_ENABLE_DEBUG=false
# VITE_ENABLE_ANALYTICS=true
