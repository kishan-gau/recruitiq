{
  "name": "web",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:check": "tsc --noEmit && vite build",
    "typecheck": "tsc --noEmit",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:visual": "percy exec -- playwright test src/__tests__/visual",
    "test:chromatic": "chromatic --project-token=${CHROMATIC_PROJECT_TOKEN}",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,css,md}\""
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@recruitiq/api-client": "workspace:*",
    "@recruitiq/auth": "workspace:*",
    "@recruitiq/types": "workspace:*",
    "@recruitiq/ui": "workspace:*",
    "@recruitiq/utils": "workspace:*",
    "@tanstack/react-query": "^5.90.12",
    "@tanstack/react-query-devtools": "^5.64.4",
    "axios": "^1.12.2",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "lucide-react": "^0.469.0",
    "pdfjs-dist": "^5.4.530",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.54.3",
    "react-hot-toast": "^2.6.0",
    "react-pdf": "^10.3.0",
    "react-router-dom": "^7.1.3",
    "recharts": "^2.15.3",
    "web-vitals": "^4.2.4",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@percy/cli": "^1.29.3",
    "@percy/playwright": "^1.0.6",
    "@playwright/test": "^1.49.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^4.0.8",
    "@vitest/ui": "^4.0.8",
    "autoprefixer": "^10.4.20",
    "chromatic": "^11.18.1",
    "eslint": "^9.18.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^61.5.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-security": "^3.0.1",
    "globals": "^16.5.0",
    "jsdom": "^26.0.0",
    "postcss": "^8.5.1",
    "prettier": "^3.4.2",
    "storybook": "^8.5.0",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.51.0",
    "vite": "^6.0.11",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.8",
    "workbox-window": "^7.4.0"
