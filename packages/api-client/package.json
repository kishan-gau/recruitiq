    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@recruitiq/types": "workspace:*",
    "axios": "^1.12.2"
  },
  "devDependencies": {
    "@types/node": "^22.10.7",
    "typescript": "^5.7.3",
    "vite": "^7.2.2",
    "vitest": "^4.0.8"
  }
