{
  "name": "@recruitiq/api-client",
  "version": "0.1.1",
  "type": "module",
  "description": "Unified API client for RecruitIQ platform with authentication, error handling, and product-specific endpoints",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
