# Test Environment Configuration
# NODE_ENV is set by the test runner (e2e for E2E tests, test for unit tests)
# Do not set NODE_ENV here to allow runtime override
PORT=3000

# Test Database (using test database for E2E tests)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/recruitiq_test
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=recruitiq_test
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_SSL=false
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# JWT Secrets (test-only keys - 43+ characters required)
JWT_SECRET=test-secret-key-for-integration-testing-only-do-not-use-in-production-environments
JWT_REFRESH_SECRET=test-refresh-secret-key-for-integration-testing-only-do-not-use-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Session Secret (for signed cookies and CSRF protection)
SESSION_SECRET=test-session-secret-for-e2e-testing-only-minimum-32-characters-required-for-security

# Cookie Configuration - Localhost E2E Testing (no domain, no secure)
COOKIE_DOMAIN=
COOKIE_SECURE=false
COOKIE_SAME_SITE=lax

# Redis (use separate DB for testing or mock)
REDIS_ENABLED=false
REDIS_URL=redis://localhost:6379/1
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Email (mock for testing)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@test.recruitiq.com

# CORS - Allow multiple frontend ports for testing
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174,http://localhost:5175,http://localhost:5176

# Logging
LOG_LEVEL=info

# Multi-tenancy
ENABLE_MULTI_TENANCY=true
ENFORCE_TENANT_ISOLATION=true

# Central Services (use dev database for tests)
CENTRAL_LOGGING_ENABLED=true
CENTRAL_LOG_DB_HOST=localhost
CENTRAL_LOG_DB_PORT=5432
CENTRAL_LOG_DB_NAME=recruitiq_dev
CENTRAL_LOG_DB_USER=postgres
CENTRAL_LOG_DB_PASSWORD=postgres
CENTRAL_LOG_DB_SSL=false
CENTRAL_MONITOR_ENABLED=false

# Test-specific settings
TEST_DB_NAME=recruitiq_dev
TEST_DB_HOST=localhost
TEST_DB_PORT=5432
TEST_DB_USER=postgres
TEST_DB_PASSWORD=postgres
