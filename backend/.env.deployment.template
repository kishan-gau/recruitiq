# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Deployment Type: 'cloud' (multi-tenant SaaS) or 'onpremise' (customer deployment)
# Cloud instances: Send logs/monitoring to central database
# On-premise instances: Keep logs/monitoring local only
DEPLOYMENT_TYPE=cloud

# Tenant ID (REQUIRED for cloud deployments)
# Unique identifier for each cloud tenant (customer organization)
# Example: tenant-abc-123, customer-acme-corp
TENANT_ID=

# Instance ID (optional, auto-detected from HOSTNAME if not set)
# Unique identifier for this instance (useful for multi-region deployments)
# Example: cloud-prod-us-east, cloud-prod-eu-west, customer-acme-instance
INSTANCE_ID=

# =============================================================================
# CENTRAL LOGGING CONFIGURATION (Cloud instances only)
# =============================================================================

# Enable central logging (should be true for cloud, false for onpremise)
CENTRAL_LOGGING_ENABLED=false

# Central Log Database Connection (for cloud instances)
CENTRAL_LOG_DB_HOST=
CENTRAL_LOG_DB_PORT=5432
CENTRAL_LOG_DB_NAME=platform_logs
CENTRAL_LOG_DB_USER=
CENTRAL_LOG_DB_PASSWORD=
CENTRAL_LOG_DB_SSL=true

# =============================================================================
# CENTRAL MONITORING CONFIGURATION (Cloud instances only)
# =============================================================================

# Enable central security monitoring (should be true for cloud, false for onpremise)
CENTRAL_MONITORING_ENABLED=false

# Central Monitoring Database Connection (for cloud instances)
# Can be same database as central logging or separate
CENTRAL_MONITOR_DB_HOST=
CENTRAL_MONITOR_DB_PORT=5432
CENTRAL_MONITOR_DB_NAME=platform_logs
CENTRAL_MONITOR_DB_USER=
CENTRAL_MONITOR_DB_PASSWORD=
CENTRAL_MONITOR_DB_SSL=true

# =============================================================================
# EXAMPLE: CLOUD DEPLOYMENT CONFIGURATION
# =============================================================================

# For cloud instance, uncomment and configure:
# DEPLOYMENT_TYPE=cloud
# TENANT_ID=tenant-abc-123
# INSTANCE_ID=cloud-prod-us-east-1
# CENTRAL_LOGGING_ENABLED=true
# CENTRAL_LOG_DB_HOST=logs.recruitiq.com
# CENTRAL_LOG_DB_NAME=platform_logs
# CENTRAL_LOG_DB_USER=cloud_logger
# CENTRAL_LOG_DB_PASSWORD=your_secure_password
# CENTRAL_MONITORING_ENABLED=true
# CENTRAL_MONITOR_DB_HOST=logs.recruitiq.com
# CENTRAL_MONITOR_DB_NAME=platform_logs
# CENTRAL_MONITOR_DB_USER=cloud_monitor
# CENTRAL_MONITOR_DB_PASSWORD=your_secure_password

# =============================================================================
# EXAMPLE: ON-PREMISE DEPLOYMENT CONFIGURATION
# =============================================================================

# For on-premise instance, use:
# DEPLOYMENT_TYPE=onpremise
# INSTANCE_ID=customer-acme-corp
# CENTRAL_LOGGING_ENABLED=false
# CENTRAL_MONITORING_ENABLED=false
# (All logs and monitoring stay local, no external data sharing)
