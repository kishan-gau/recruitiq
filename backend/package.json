{
  "name": "recruitiq-backend",
  "version": "1.0.0",
  "description": "RecruitIQ Production Backend API",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "start:loadtest": "cross-env LOAD_TEST=true node src/server.js",
    "start:prod": "NODE_ENV=production node src/server.js",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:all": "powershell -ExecutionPolicy Bypass -File scripts/run-all-tests.ps1",
    "test:all:jest": "powershell -ExecutionPolicy Bypass -File scripts/run-all-tests.ps1 -JestOnly",
    "test:all:bdd": "powershell -ExecutionPolicy Bypass -File scripts/run-all-tests.ps1 -BDDOnly",
    "test:watch": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:integration": "cross-env NODE_OPTIONS=--experimental-vm-modules jest tests/integration",
    "test:tenant-isolation": "cross-env NODE_OPTIONS=--experimental-vm-modules jest tests/integration/tenant-isolation.test.js",
    "test:validation": "node scripts/test-validation-critical.js",
    "test:validation:full": "node scripts/test-validation.js",
    "test:security": "node scripts/test-security-headers.js",
    "test:auth": "node scripts/test-auth-enhanced.js",
    "test:load": "k6 run tests/load/scenarios/load-test.js",
    "test:load:smoke": "k6 run tests/load/scenarios/smoke-test.js",
    "test:load:stress": "k6 run tests/load/scenarios/stress-test.js",
    "test:load:spike": "k6 run tests/load/scenarios/spike-test.js",
    "test:load:soak": "k6 run tests/load/scenarios/soak-test.js",
    "test:db:setup": "node scripts/setup-test-db.js",
    "test:db:reset": "node scripts/setup-test-db.js",
    "audit:sql": "node scripts/sql-injection-audit.js",
    "db:reset": "node src/database/reset-schema.js",
    "db:seed": "node src/database/seed-test-data.js",
    "db:seed:features": "node scripts/seeds/seedFeatures.js",
    "migrate": "node src/database/migrate.js up",
    "migrate:up": "node src/database/migrate.js up",
    "migrate:down": "node src/database/migrate.js down",
    "seed": "node src/database/seed.js",
    "lint": "eslint src/**/*.js",
    "audit:security": "npm audit --audit-level=moderate",
    "audit:fix": "npm audit fix",
    "audit:app": "node scripts/security-audit.js",
    "build:check": "echo 'Checking production readiness...' && npm run lint && npm run test",
    "deploy:check": "node scripts/deployment-check.js"
  },
  "keywords": [
    "recruitment",
    "ats",
    "applicant-tracking-system",
    "saas"
  ],
  "author": "RecruitIQ",
  "license": "MIT",
  "dependencies": {
    "aws-sdk": "^2.1501.0",
    "bcryptjs": "^3.0.2",
    "bull": "^4.12.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.0",
    "helmet": "^8.1.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.10",
    "pdfkit": "^0.17.2",
    "pg": "^8.11.3",
    "qrcode": "^1.5.4",
    "rate-limit-redis": "^4.2.3",
    "redis": "^5.9.0",
    "socket.io": "^4.6.1",
    "speakeasy": "^2.0.0",
    "tslib": "^2.8.1",
    "uuid": "^13.0.0",
    "validator": "^13.12.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@playwright/test": "^1.56.1",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "overrides": {
    "cookie": "^0.7.0"
  }
}
