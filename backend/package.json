{
  "name": "recruitiq-backend",
  "version": "1.0.0",
  "description": "RecruitIQ Production Backend API",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "start:loadtest": "cross-env LOAD_TEST=true node src/server.js",
    "start:prod": "NODE_ENV=production node src/server.js",
    "test": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:e2e": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --config=jest.e2e.config.js",
    "test:all": "powershell -ExecutionPolicy Bypass -File scripts/run-all-tests.ps1",
    "test:all:jest": "powershell -ExecutionPolicy Bypass -File scripts/run-all-tests.ps1 -JestOnly",
    "test:all:bdd": "powershell -ExecutionPolicy Bypass -File scripts/run-all-tests.ps1 -BDDOnly",
    "test:watch": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:integration": "cross-env NODE_OPTIONS=--experimental-vm-modules jest tests/integration",
    "test:tenant-isolation": "cross-env NODE_OPTIONS=--experimental-vm-modules jest tests/integration/tenant-isolation.test.js",
    "test:validation": "node scripts/test-validation-critical.js",
    "test:validation:full": "node scripts/test-validation.js",
    "test:security": "node scripts/test-security-headers.js",
    "test:auth": "node scripts/test-auth-enhanced.js",
    "test:load": "k6 run tests/load/scenarios/load-test.js",
    "test:load:smoke": "k6 run tests/load/scenarios/smoke-test.js",
    "test:load:stress": "k6 run tests/load/scenarios/stress-test.js",
    "test:load:spike": "k6 run tests/load/scenarios/spike-test.js",
    "test:load:soak": "k6 run tests/load/scenarios/soak-test.js",
    "test:db:setup": "node scripts/setup-test-db.js",
    "test:db:reset": "node scripts/setup-test-db.js",
    "test:knex": "node scripts/test-knex.js",
    "audit:sql": "node scripts/sql-injection-audit.js",
    "db:reset": "node src/database/reset-schema.js",
    "db:seed": "node src/database/seed-test-data.js",
    "db:seed:features": "node scripts/seeds/seedFeatures.js",
    "migrate": "node scripts/migrate.js latest",
    "migrate:latest": "node scripts/migrate.js latest",
    "migrate:up": "node scripts/migrate.js up",
    "migrate:down": "node scripts/migrate.js down",
    "migrate:rollback": "node scripts/migrate.js rollback",
    "migrate:rollback:all": "knex migrate:rollback --all",
    "migrate:status": "node scripts/migrate.js status",
    "migrate:make": "node scripts/migrate.js make",
    "migrate:reset": "node scripts/migrate.js reset",
    "seed": "node scripts/migrate.js seed",
    "seed:make": "knex seed:make",
    "seed:specific": "node scripts/migrate.js seed:specific",
    "seed:production": "NODE_ENV=production node scripts/migrate.js seed",
    "seed:development": "NODE_ENV=development node scripts/migrate.js seed",
    "seed:tenant": "node scripts/seed-tenant.js",
    "db:setup": "npm run migrate && npm run seed",
    "db:reset:knex": "npm run migrate:rollback:all && npm run migrate && npm run seed",
    "db:fresh": "node scripts/migrate.js reset",
    "lint": "eslint src/**/*.js",
    "audit:security": "npm audit --audit-level=moderate",
    "audit:fix": "npm audit fix",
    "audit:app": "node scripts/security-audit.js",
    "build:check": "echo 'Checking production readiness...' && npm run lint && npm run test",
    "deploy:check": "node scripts/deployment-check.js",
    "secrets:generate": "node scripts/secrets-cli.js generate",
    "secrets:store": "node scripts/secrets-cli.js store",
    "secrets:get": "node scripts/secrets-cli.js get",
    "secrets:rotate": "node scripts/secrets-cli.js rotate",
    "secrets:delete": "node scripts/secrets-cli.js delete",
    "secrets:list": "node scripts/secrets-cli.js list",
    "secrets:health": "node scripts/secrets-cli.js health"
  },
  "keywords": [
    "recruitment",
    "ats",
    "applicant-tracking-system",
    "saas"
  ],
  "author": "RecruitIQ",
  "license": "MIT",
  "dependencies": {
    "aws-sdk": "^2.1693.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.3",
    "bull": "^4.16.5",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.1",
    "helmet": "^8.1.0",
    "joi": "^18.0.2",
    "jsonwebtoken": "^9.0.3",
    "knex": "^3.1.0",
    "mathjs": "^15.1.0",
    "multer": "^2.0.2",
    "node-cache": "^5.1.2",
    "nodemailer": "^7.0.12",
    "pdfkit": "^0.17.2",
    "pg": "^8.16.3",
    "qrcode": "^1.5.4",
    "rate-limit-redis": "^4.3.1",
    "redis": "^5.10.0",
    "socket.io": "^4.8.3",
    "speakeasy": "^2.0.0",
    "transip-api": "^3.0.0",
    "tslib": "^2.8.1",
    "uuid": "^13.0.0",
    "validator": "^13.15.26",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@playwright/test": "^1.57.0",
    "axios": "^1.13.2",
    "axios-cookiejar-support": "^6.0.5",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.2",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "supertest": "^7.1.4",
    "tough-cookie": "^6.0.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "overrides": {
    "cookie": "^0.7.0"
  }
}
