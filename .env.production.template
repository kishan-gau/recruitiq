# ================================
# PRODUCTION ENVIRONMENT TEMPLATE
# ================================
# Copy this file to .env.production and fill in actual values
# NEVER commit the actual .env.production file

# Environment
NODE_ENV=production
ENVIRONMENT=production

# Domain Configuration
DOMAIN=your-domain.com

# VPS Configuration (for deployment script)
VPS_HOST=your-vps-ip-or-hostname
VPS_USER=deployuser

# Database
POSTGRES_USER=recruitiq_prod
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_DB=recruitiq_production

# Redis
REDIS_PASSWORD=CHANGE_ME_STRONG_REDIS_PASSWORD

# JWT Secrets (generate with: openssl rand -base64 32)
JWT_SECRET=CHANGE_ME_MIN_32_CHARS
JWT_REFRESH_SECRET=CHANGE_ME_MIN_32_CHARS
COOKIE_SECRET=CHANGE_ME_MIN_32_CHARS
SESSION_SECRET=CHANGE_ME_MIN_32_CHARS

# Encryption Key (generate with: openssl rand -hex 32)
ENCRYPTION_KEY=CHANGE_ME_64_HEX_CHARS

# CORS Configuration
CORS_ORIGINS=https://your-domain.com,https://nexus.your-domain.com,https://paylinq.your-domain.com,https://portal.your-domain.com

# SSL/TLS Configuration
LETSENCRYPT_EMAIL=admin@your-domain.com

# Traefik Dashboard Auth (generate with: htpasswd -nb admin password)
TRAEFIK_AUTH=admin:$$apr1$$hash$$here

# Email Configuration (optional)
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=noreply@your-domain.com
SMTP_PASSWORD=CHANGE_ME
SMTP_FROM=noreply@your-domain.com

# AWS S3 Configuration (optional, for file uploads)
AWS_ACCESS_KEY_ID=CHANGE_ME
AWS_SECRET_ACCESS_KEY=CHANGE_ME
AWS_REGION=eu-west-1
AWS_S3_BUCKET=recruitiq-uploads

# Monitoring (optional)
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=

# Feature Flags
ENABLE_RATE_LIMITING=true
ENABLE_CSRF_PROTECTION=true
ENABLE_HELMET=true
